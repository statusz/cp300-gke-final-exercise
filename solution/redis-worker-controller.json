{
  "kind": "ReplicationController",
  "apiVersion": "v1beta3",
  "metadata": {
    "name": "redis-worker-controller",
    "labels": {
      "name": "redis",
      "role": "worker"
    }
  },
  "spec": {
    "replicas": 2,
    "selector": {
      "name": "redis",
      "role": "worker"
    },
    "template": {
      "metadata": {
        "labels": {
          "name": "redis",
          "role": "worker"
        }
      },
      "spec": {
        "containers": [
          {
            "name": "redis-worker",
            "image": "kubernetes/redis-slave:v2",
            "ports": [
              {
                "containerPort": 6379,
                "protocol": "TCP"
              }
            ],
            "resources": {
              "limits": {
                "cpu": "100m"
              }
            }
          }
        ]
      }
    }
  }
}
