{
  "kind": "Pod",
  "apiVersion": "v1beta3",
  "metadata": {
    "name": "redis-master",
    "labels": {
      "name": "redis",
      "role": "master"
    }
  },
  "spec": {
    "containers": [
      {
        "name": "master",
        "image": "redis",
        "ports": [
          {
            "containerPort": 6379,
            "protocol": "TCP"
          }
        ],
        "resources": {
          "limits": {
            "cpu": "100m"
          }
        }
      }
    ]
  }
}
