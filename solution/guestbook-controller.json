{
  "kind": "ReplicationController",
  "apiVersion": "v1beta3",
  "metadata": {
    "name": "guestbook-controller",
    "labels": {
      "name": "guestbook"
    }
  },
  "spec": {
    "replicas": 3,
    "selector": {
      "name": "guestbook"
    },
    "template": {
      "metadata": {
        "labels": {
          "name": "guestbook"
        }
      },
      "spec": {
        "containers": [
          {
            "name": "php-redis",
            "image": "kubernetes/example-guestbook-php-redis:v2",
            "ports": [
              {
                "containerPort": 80,
                "protocol": "TCP"
              }
            ],
            "resources": {
              "limits": {
                "cpu": "100m",
                "memory": "50000000"
              }
            }
          }
        ]
      }
    }
  }
}
